<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<SelectDialog
		title="Select Approver"
		search="handleSearchApprover"
		confirm="handleValueCloseApprover"
		cancel=""
		growing="true"
		items="{path:'oModel>/AllApprover',sorter: {
				path: 'IDNo',
				descending: true,
				group: false}}">
		<StandardListItem
			iconDensityAware="false"
			iconInset="false"
			title="{oModel>IDNo}"
			description="{oModel>FirstName} - {oModel>Surname}"
			info="{oModel>Status}"
			infoState="{oModel>InfoStateName}"
			infoStateInverted="true"/>
	</SelectDialog>
</core:FragmentDefinition>
